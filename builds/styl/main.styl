@import "nib"
@import "../../node_modules/iconfonts/stylesheets/ionicons.styl"

ion-font()
//@import "lost"

@lost gutter 0px

$phi = 1.618
$golden_major = 0.618
$golden_minor = 0.382

* 
	margin 0
	padding 0
	box-sizing border-box

html
	font-size: 100%
	height 100%
body 
	font-size: 2em // text defaults 12px
	font-family: 'Roboto', sans-serif
	color: hsl(0, 0%, 93%)
	height 100vh

h1
	font-size: 20px
	font-size: 1.25rem
.Imagegrid__wrapper
	lost-masonry-wrap: no-flex
.Imagegrid__item
	position relative
	overflow hidden
	background hsl(99,22%,22%)
	lost-masonry-column: 1/6
	img
		width 100% 
	
	
section 
	//height 100%
	//background: tomato
	lost-utility: edit
	lost-masonry-wrap: no-flex
.Grid
	position relative
	text-align center
	overflow hidden
	//padding 4rem 0
	//background: darken(tomato, 20%)
	// lost-column: 1/3
	lost-masonry-column: 1/3
	img 
		max-width 100%
.Grid--overlay
	// opacity 0
	// visibility hidden
	width 100%
	height 33%
	position absolute
	top 100%
	z-index 1
	background hsla(100,0%,0%,0.5)  
	display flex
	align-items center
	justify-content center
	transition top 0.3s ease;
	&:before
		ion-icon("email", 1em, )
		line-height 1em
		padding-right 0.5em
.Grid:hover .Grid--overlay, .Imagegrid__item:hover .Grid--overlay
	top 67%
	
.Wrapper__vimeo
	position: relative
	padding-bottom: percentage(800/1920)//56.25% /*16:9*/
	padding-top: 1.55555555555555%;
	// padding-top: 25px;
	height:0;
.Wrapper__vimeo iframe 
	position: absolute;
	top 0
	left 0
	width 100%
	height 100%
	background red
	

	

	
	
	
	


	
